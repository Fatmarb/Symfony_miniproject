{% extends 'base.html.twig' %}

{% block title %}Etudiant List{% endblock %}

{% block body %}
    <h1>Etudiant LIST</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NCE</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.Nom }}</td>
                <td>{{ etudiant.Prenom }}</td>
                <td>
                    {{ include('etudiant/_delete_form.html.twig') }}
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">edit</a>
