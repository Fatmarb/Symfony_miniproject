{% extends 'base.html.twig' %}

{% block title %}Enseignant List{% endblock %}

{% block body %}
    <h1>Enseignant List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %}
            <tr>
                <td>{{ enseignant.Matricule }}</td>
                <td>{{ enseignant.Nom }}</td>
                <td>{{ enseignant.Prenom }}</td>
                <td>
                    <a href="{{ path('app_enseignant_edit', {'matricule': enseignant.Matricule}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_enseignant_new') }}">Create new</a>
{% endblock %}
