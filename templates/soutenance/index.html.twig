{% extends 'base.html.twig' %}

{% block title %}List des Soutenances{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Soutenance</h1>
    <div class="text-right mb-3">
                <a href="{{ path('app_soutenance_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Ajouter
                </a>
    </div>
<div class="table-responsive">
    <table id="etudiantTable" class="table table-striped table-bordered dataTable">
        <thead>
            <tr>
                <th>Num jury</th>
                <th>Enseignant</th>
                <th>Etudiant</th>
                <th>Date de Soutenance</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soutenance in soutenances %}
            <tr>
            <td>{{ soutenance.id}}</td>
            <td>{{ soutenance.enseignant.nom }} {{ soutenance.enseignant.prenom }}</td>
            <td>{{ soutenance.etudiant.nom }} {{ soutenance.etudiant.prenom }}</td>
            <td>{{ soutenance.dateSoutenance ? soutenance.dateSoutenance|date('Y-m-d') : '' }}</td>
            <td>{{ soutenance.note }}</td>
            <td>
                {{ include('soutenance/_delete_form.html.twig') }}
                <a class="btn btn-warning btn-sm" href="{{ path('app_soutenance_edit', {'id': soutenance.id}) }}">edit</a>
            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
{% endblock %}